{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "title": {
    "text": "Heat stress: yearly hospitalizations",
    "subtitlePadding": 10,
    "fontWeight": "normal",
    "anchor": "start",
    "fontSize": 18,
    "font": "sans-serif",
    "baseline": "top",
    "subtitle": "Age-adjusted rate (per 100,000)",
    "subtitleFontSize": 13
  },
  "data": [
    {
      "name": "highlight_store",
      "transform": [{"type": "collect", "sort": {"field": "_vgsid_"}}]
    },
    {
      "name": "source_0",
      "values": [
        {
